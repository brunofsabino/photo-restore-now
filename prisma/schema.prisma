// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Enable SSL for production
  // In production, ensure DATABASE_URL includes sslmode=require
  // Example: postgresql://user:pass@host:5432/db?sslmode=require
}

model User {
  id               String    @id @default(cuid())
  name             String?
  email            String    @unique
  emailVerified    DateTime?
  image            String?
  welcomeEmailSent Boolean   @default(false)
  accounts         Account[]
  sessions         Session[]
  orders           Order[]
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Order {
  id              String   @id @default(cuid())
  userId          String?  // Nullable for guest checkout
  email           String   // Always required (guest or OAuth)
  packageId       String
  amount          Int
  status          String   // "processing" | "completed" | "failed"
  paymentIntentId String?
  photoCount      Int      @default(0)
  originalFiles   String[] // URLs to original uploaded photos
  restoredFiles   String[] // URLs to restored photos
  user            User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  jobs            Job[]    // Restoration jobs for this order
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Job {
  id              String     @id @default(cuid())
  orderId         String?    // Link with Order (optional for backward compat)
  userId          String?    // Guest checkout = null
  email           String
  packageId       String
  serviceType     String     @default("restoration")
  status          String     // "pending" | "paid" | "processing" | "completed" | "failed"
  paymentIntentId String?
  totalAmount     Int
  errorMessage    String?    @db.Text
  images          JobImage[]
  order           Order?     @relation(fields: [orderId], references: [id], onDelete: SetNull)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  completedAt     DateTime?

  @@index([email])
  @@index([status])
  @@index([orderId])
}

model JobImage {
  id           String   @id @default(cuid())
  jobId        String
  originalName String
  size         Int
  mimeType     String
  originalUrl  String?  @db.Text
  restoredUrl  String?  @db.Text
  uploadedAt   DateTime @default(now())
  job          Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@index([jobId])
}
